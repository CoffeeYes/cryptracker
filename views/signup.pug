extends layout

block content
  .fill-container
    .center-container
      form.signup-form(action="/signup",method="post")
        p.error=error
        label Username
          input(name="username")
        label Email
          input(name="email")
        label Password
          input(name="password1",type="password")
        label Repeat Password
          input(name="password2",type="password")
        button Signup
